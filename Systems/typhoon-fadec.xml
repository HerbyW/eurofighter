<PropertyList>
    
    <!--       -=+# Control Input #+=-      -->
    <filter>
        <name>Engine 1 Off Hack</name>
        <debug>false</debug>
        <type>gain</type>
        <enable>
            <condition>
                <equals>
                    <property>/engines/engine[0]/running</property>
                    <value>false</value>
                </equals>
            </condition>
        </enable>
        <input>
            <value>0</value>
        </input>
        <output>
            <property>/systems/DECMU/command-outputs/engine[0]/throttle</property>
        </output>
        <gain>1.0</gain>
        <u_min>0.0</u_min>
        <u_max>1.0</u_max>
    </filter>
    <filter>
        <name>Engine 2 Off Hack</name>
        <debug>false</debug>
        <type>gain</type>
        <enable>
            <condition>
                <equals>
                    <property>/engines/engine[1]/running</property>
                    <value>false</value>
                </equals>
            </condition>
        </enable>
        <input>
            <value>0</value>
        </input>
        <output>
            <property>/systems/DECMU/command-outputs/engine[1]/throttle</property>
        </output>
        <gain>1.0</gain>
        <u_min>0.0</u_min>
        <u_max>1.0</u_max>
    </filter>
    
    
    
    <!-- Thrust Vectoring -->
 <!--   <filter>
        <name>Thrust Vectoring: Speed Offset</name>
        <debug>false</debug>
        <type>gain</type>
        <enable>
            <condition>
                <equals>
                    <property>/systems/DECMU/thrust-vectoring</property>
                    <value>true</value>
                </equals>
            </condition>
        </enable>
        <input>
            <property>/velocities/airspeed-kt</property>
            <factor>-0.001</factor>
            <offset>-300</offset>
        </input>
        <output>
            <property>/systems/DECMU/internal/thrust-vectoring-gain</property>
        </output>
        <gain>-0.004</gain>
        <u_min>0</u_min>
        <u_max>0.5</u_max>
    </filter>
    -->
    
    <filter>
        <name>Left Engine Throttle</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <and>
                    <equals>
                        <property>/controls/switches/lp-cock-left</property>
                        <value>1</value>
                    </equals>
                    <greater-than>
                        <property>/engines/engine[0]/rpm</property>
                        <value>20</value>
                    </greater-than>
                </and>
            </condition>
            <property>/controls/engines/engine[0]/throttle</property>
        </input>
        <input>
            <condition>
                <less-than>
                    <property>/engines/engine[0]/rpm</property>
                    <value>20</value>
                </less-than>
            </condition>
            <value>0</value>
        </input>
        <output>
            <property>/systems/DECMU/command-outputs/engine[0]/throttle</property>
        </output>
        <gain>1.0</gain>
        <u_min>0.0</u_min>
        <u_max>1.0</u_max>
    </filter>
    <filter>
        <name>Right Engine Throttle</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <and>
                    <equals>
                        <property>/controls/switches/lp-cock-right</property>
                        <value>1</value>
                    </equals>
                    <greater-than>
                        <property>/engines/engine[1]/rpm</property>
                        <value>20</value>
                    </greater-than>
                </and>
            </condition>
            <property>/controls/engines/engine[1]/throttle</property>
        </input>
        <input>
            <condition>
                <less-than>
                    <property>/engines/engine[1]/rpm</property>
                    <value>20</value>
                </less-than>
            </condition>
            <value>0</value>
        </input>
        <output>
            <property>/systems/DECMU/command-outputs/engine[1]/throttle</property>
        </output>
        <gain>1.0</gain>
        <u_min>0.0</u_min>
        <u_max>1.0</u_max>
    </filter>
   
    <!-- <filter>
        <name>Thrust Vectoring Computer</name>
        <debug>false</debug>
        <type>gain</type>
        <enable>
            <condition>
                <equals>
                    <property>/systems/DECMU/thrust-vectoring</property>
                    <value>true</value>
                </equals>
            </condition>
        </enable>
        <input>
            <property>/systems/FCS/internal/pitch-command</property>
            <scale>-1.0</scale>
        </input>
        <output>
            <property>/systems/DECMU/command-outputs/nozzle-angle-pitch</property>
        </output>
        <gain>
            <property>/systems/DECMU/internal/thrust-vectoring-gain</property>
        </gain>
        <u_min>-0.35</u_min>
        <u_max>0.35</u_max>
    </filter>
    -->
    
    <filter>
        <name>Left Engine Nozzle Area Dry Power</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <property>/engines/engine[0]/n1</property>
        </input>
        <output>
            <property>/surface-positions/nozzle-left-norm</property>
        </output>
        <gain>
            <expression>
                <table>
                    <property>/engines/engine[0]/reheat</property>
                    <entry><ind>0</ind><dep>0.005</dep></entry>
                    <entry><ind>0.6</ind><dep>0</dep></entry>
                    <entry><ind>1</ind><dep>-0.0005</dep></entry>
                </table>
            </expression>
        </gain>
        <u_min>-0.35</u_min>
        <u_max>1.0</u_max>
    </filter>
    <filter>
        <name>Right Engine Nozzle Area Dry Power</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <property>/engines/engine[1]/n1</property>
        </input>
        <output>
            <property>/surface-positions/nozzle-right-norm</property>
        </output>
        <gain>
            <expression>
                <table>
                    <property>/engines/engine[1]/reheat</property>
                    <entry><ind>0</ind><dep>0.005</dep></entry>
                    <entry><ind>0.6</ind><dep>0</dep></entry>
                    <entry><ind>1</ind><dep>-0.0005</dep></entry>
                </table>
            </expression>
        </gain>
        <u_min>-0.35</u_min>
        <u_max>1.0</u_max>
    </filter>
</PropertyList>
